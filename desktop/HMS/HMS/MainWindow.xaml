<Window x:Class="HMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="266" Width="401">
    <Grid Margin="0,0,2,-4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="411*"/>
            <ColumnDefinition Width="106*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="signInBtn" Content="Sign In" HorizontalAlignment="Left" Margin="225,135,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <TextBox x:Name="usernameTxt" HorizontalAlignment="Left" Height="35" Margin="116,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189"/>
        <TextBox x:Name="passwordTxt" HorizontalAlignment="Left" Height="35" Margin="116,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="28,30,0,0" VerticalAlignment="Top"/>
        <Label Content="Password&#xD;&#xA;" HorizontalAlignment="Left" Margin="28,83,0,0" VerticalAlignment="Top" Height="26" Width="62"/>
        <ProgressBar HorizontalAlignment="Left" Margin="28,197,0,0" VerticalAlignment="Top" Width="331" Height="23" Grid.ColumnSpan="2" IsIndeterminate="True"/>
    </Grid>
</Window>
